mixin editor-directory
  dl
    dt
      span.label.no-underline Title
      span.sub-nav__icon
        icon.Back
    if(containers)
      #containers.scroll
        each container in containers
          if container.size > 0
            a(href= href + container.id , id=container.id)
              dd
                span.text= container.title
                span.badge= container.size
    +editor-navbar

mixin directory-add
  dl
    dt
      span.label.no-underline Title
      span.sub-nav__icon
        icon.Back
    if(containers)
      #containers.scroll
        each container in containers
          if container.size > 0
            a(href= href + container.id , id=container.id)
              dd
                span.text= container.title
