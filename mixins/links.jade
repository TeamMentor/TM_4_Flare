mixin navigate
  dl
    dt
      if title
        span.label.no-underline= title
    if(containers)
      #containers
        each container in containers
          if container.size > 0
            dd
              a.item(href= href + ',' +container.id , id=container.id)
                span.text= container.title
                span.badge= container.size

mixin help-navigation
  dl.help
    dt
      span.label.no-underline Documentation
    dd
      a(href='help-sub-navigation') About TEAM Mentor

mixin help-sub-navigation
  dl.help
    dt
      span.label.no-underline Documentation
    dd
      a(href='help-sub-navigation') About TEAM Mentor
      ul
        li
            a(href='help-docs')
                span What's new in this release?
        li
            a(href='help-docs')
                span Introduction to TEAM Mentor
        li
            a(href='help-docs')
                span Quick Start Guide
        li
            a(href='help-docs')
                span Support