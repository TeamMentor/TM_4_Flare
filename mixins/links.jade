mixin links-navbar__landing-page
  ul.display-inline
    li
      a(href='about') About
    li
      a(href='features') Features
    li
      a(href='help-index') Docs
    li
      a(href='get-started') Get Started

mixin left-navigation
  aside#left-nav
    ul
      li
        a(href='/flare/navigate')
          +index-icon
      li
        a(href='/flare/help-index')
          +info-icon
      li
        a(href='/flare/index')
          +logout-icon

mixin navigate
  dl
    dt
      if title
        span.label.no-underline= title
        span.sub-nav__icon
          +back-icon
    if(containers)
      #containers.scroll
        each container in containers
          if container.size > 0
            a(href= href + ',' +container.id , id=container.id)
              dd
                span.text= container.title
                span.badge= container.size

mixin help-navigation
  if library
    dl.help
      dt.vertical-align
        span.label.no-underline Documentation
      .scroll
        each view in library.Views
          dd
            a(href='help-sub-nav')=view.Title