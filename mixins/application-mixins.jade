//- Flare Search Bar Input
mixin search-bar
    .search
        form(method='get', action='/flare/user/search')
          a.button.desktop-hide(href='#left-nav')
            +index-icon
          input.search-input#search-text(type='text', name='text', placeholder='Type keywords here', value=text)
          button.btn-search#search-button(type='submit')
            +search-icon
          a.button(href='#right-nav')
              +filters-icon

//- Save and Share Results
mixin results-save-share
    section.row__label
        if results
            if results.size() > 25
                td
                    .label.no-underline#resultsTitle= results.take(25).size() + '/' + results.size() + ' results showing'
            else
                td
                    .label.no-underline#resultsTitle= results.take(25).size() + ' results showing'
        ul.display-inline
            li
                +save-results-button
            li
                +share-results-button

//-Delete and Share Results
mixin results-delete-share
    .label 0/200 results showing
    ul.display-inline
        li.half-width
            +delete-results-button
        li.half-width
            +share-results-button

//- Start View
mixin start-view
    section.row
        section.row__label
            .label Popular Search Terms
        section.row
            +search-term-list
    section.row
        section.row__label
            .label Recently Viewed Articles
        section.row
            //+articles-list
    section.row
        section.row__label
            .label Top Articles
        section.row
            //+articles-list

//- Articles List
mixin articles-list
  if results
    each result,index in results.take(10)
      if result && result.id && result.title
        article.result
          +metadata
          .summary
            a(href='/flare/article/' + result.id.remove('article-') + '/' + result.title.replace(/ /g,'-').remove('.'), id=result.id)
                h3#article-headline= result.title
            p= result.summary + '...'

//- Saved Articles List
mixin saved-articles-list
  section.row
    section.row__label
      +results-delete-share
    section.row
      article.result
        +metadata-saved
        +article-summary
      article.result
        +metadata-saved
        +article-summary
      article.result
        +metadata-saved
        +article-summary

