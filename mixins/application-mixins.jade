            +search-icon
            span Search Term
    ul.display-inline
        li.half-width
            +delete-button
        li.half-width
            +share-button

//- Flare Filters Div
mixin filters-div
  ul.side-nav
    li
      +filters-icon
  if filters
    #filters
      for filter in filters
        .label
          +filters-icon
          span.text= ' ' + filter.title
        ul.filters
          for result in filter.results
            if result.size > 0
              li
                a(href=href + '/'+result.id)
                  span
                    +filter-icon(filter.title, result.title)
                  span= ' ' + result.title
                span= '  '
                span.right.badge= result.size
  a.button.btn-minor(href='#')
    +arrow-left-icon

//- Pagination
mixin pagination
  section.row#pagination
    .previous
      +arrow-left-icon
    .number
      select
        option(value='1') 1
        option(value='2') 2
        option(value='3') 3
    .next
      +arrow-right-icon
