//- Flare Filters Div
mixin filters-div
    .nav-icon
        ul
            li
                +filters-icon
    if filters
        #filters
            .bg
                for filter in filters
                    .label
                        +filters-icon
                        span.text= ' ' + filter.title
                        ul.filters
                            for result in filter.results
                                if result.size > 0
                                    li
                                        a(href=href + '/'+result.id)
                                            span
                                                +filter-icon(filter.title, result.title)
                                            span= ' ' + result.title
                                        span= '  '
                                        span.right.badge= result.size

