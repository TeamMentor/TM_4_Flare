include buttons.jade
include form_inputs.jade

//- Website Name
- var head_title = 'TEAM Mentor 4.5'

mixin copyright
  .footer
    .si
      a(href='http://www.securityinnovation.com/' target='_blank')
        .si-logo
    .icons
      ul
        li
          .label.no-underline TEAM Mentor 4.5
        li
          a(href='mailto:support@securityinnovation.com' title='Email')
            icon.Mail
        li
          a(href='http://www.twitter.com/SecInnovation' target='_blank' title='Twitter')
            icon.Twitter
        li
          a#terms-and-conditions(ui-sref="terms-and-conditions")
            icon.Paperclip

mixin tm-support-email
  a#tm-support-email(href='mailto:support@securityinnovation.com') support@securityinnovation.com

mixin alert-ok
  .section.row(ng-show="showInfoMessage()")
    .alert.alert-ok(role="alert")
      #message
        span.alert-icon !
        span.alert-text {{infoMessage}}

mixin alert-bad
  .section.row(ng-show="showErrorMessage()")
    .alert.alert-bad(role="alert")
      #message
        span.alert-icon !
        span.alert-text Error:  {{errorMessage}}
        div(ng-show="showSupportEmail()")
          +tm-support-email
