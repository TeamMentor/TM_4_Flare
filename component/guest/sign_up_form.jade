include ../../mixins/form_inputs.jade
include ../../mixins/forms.jade
include ../../mixins/buttons.jade
include ../../mixins/globals.jade

div(ng-controller="Signup_Controller")
  .section.row__label
    h4 Sign Up
  #error
    +alert-bad
  #info
    +alert-ok
  .section.row
    form#sign-up-form.access-form(role="form" ng-submit="signup()")
      .input-field
        +username-input
      .input-field
        +email-input
      .input-field
        +password-input
      .input-field
        +confirm-password-input
      .input-field
        +first-name-input
      .input-field
        +last-name-input
      .input-field
        +company-input
      .input-field
        +title-input
      .input-field
        +country-input
      .input-field
        +state-input
      .conditions
        include:marked ../../../TM_Static/content/getting-started/agree-to-toc.md
      .button-field
        +sign-up-button