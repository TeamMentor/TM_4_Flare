include ../../mixins/form_inputs.jade

div(ng-controller="Login_Controller")
  section.row__label
    .label Login
  section.row(ng-show="showErrorMessage()")
    .alert.alert-bad(role="alert")
      #message
        span.alert-icon !
        span.alert-text Error:  {{errorMessage}}

  section.row(ng-show="showInfoMessage()")
    .alert.alert-ok(role="alert")
      #message
        span.alert-icon |
        span.alert-text Info:  {{infoMessage}}

  section.row
    form#login-form(role="form" ng-submit="login()")
      .input-field
        +username-input
      .input-field
        +password-input
      .button-field
        button(type="submit", id="btn-login") Login
      .button-field
        br
        a.text-right#pwd_forgot(href="pwd_forgot") Get Password