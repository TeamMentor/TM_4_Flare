    .section.row__label
      .label Top Articles
    .section.row
      article-box.article-box(ng-repeat='article in top_Articles' class='article-box')

  a(name='my_Top_Articles')
  .section.row
    .section.row__label
      .label My Top Articles
    .section.row
      article-box.article-box(ng-repeat='article in my_Top_Articles' class='article-box')

