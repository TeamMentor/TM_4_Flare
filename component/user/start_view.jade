    .section.row__label
      .label Popular Search Terms
    .section.row
      .search-term(ng-repeat="search in top_Search")
        span.icon
          icon.Star
        span.link
          a(href='{{search.url}}')
            span {{search.title}}

  a(name='recently_Viewed_Articles')
  .section.row
