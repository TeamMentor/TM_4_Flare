div(ng-controller='Login_Controller')
  section.row__label
    .label Login
  section.row
    form#login-form(role='form' ng-submit='login()')
      .input-field
        label(for='username') Username
          input(type='text', id='username', placeholder='Username',ng-model='username', required, maxlength='256')
      .input-field
        label(for='password') Password
          input(type='password', id='password', placeholder='Password',ng-model='password',required,maxlength='256')
      .button-field
        button.full-width(type='submit', id='btn-login') Login
      .button-field
        br
        a#getPassword(ui-sref="pwd_forgot") Get Password
        //button.full-width.btn-minor(type='submit'  Get Password

  alert-bad
  alert-ok
