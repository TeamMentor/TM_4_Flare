include ../mixins/icons.jade
.section.row
  .section.row__label
    .label Popular Search Terms
  .section.row(ng-controller="Search_Controller")
    .article.search-term(ng-repeat="search in top_Search")
      a(href='{{search.url}}')
        +search-icon
        span {{search.title}}
.section.row
  .section.row__label
    .label(ng-show="recent_Articles.length > 0") Recently Viewed Articles
  .section.row
    article-box.article-box(ng-repeat='article in recent_Articles')
.section.row
  .section.row__label
    .label Top Articles
  .section.row
    article-box.article-box(ng-repeat='article in top_Articles')
